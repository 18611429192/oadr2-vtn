# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET	/						controllers.Events.index()

# Test
#GET /test					controllers.OadrEvents.index()

# Event List
GET /events					controllers.Events.events()

# New Event
GET	/events/new					controllers.Events.blankEvent()
POST	/events					controllers.Events.newEvent()

# Edit Event
GET /events/:id			controllers.Events.editEvent(id:Long)
POST /events/:id		controllers.Events.updateEvent(id:Long)

# Delete Event
POST    /events/:id/delete       controllers.Events.deleteEvent(id:Long)

# Program List
GET /programs					controllers.Programs.programs()

# New Event
GET	/programs/new					controllers.Programs.blankProgram()
POST	/programs					controllers.Programs.newProgram()

# Delete Event
POST    /program/:id/delete       controllers.Programs.deleteProgram(id:Long)

# Handle Request
GET /requests/:program			controllers.OadrEvents.requests(program:String)
POST /requests			controllers.OadrEvents.sendHttpResponse()

# Display Page
POST /requests/display		controllers.OadrEvents.renderAjaxTable(program:String)

# Delete Request
POST    /requests/:id/delete       controllers.OadrEvents.deleteRequest(program:String, id:Long)

# XMPP Test
GET /test/request				controllers.OadrEvents.sendXMPPRequest(event:String)
GET /test/created				controllers.OadrEvents.sendXMPPCreated(event:String)

# Customer List
GET /customers					controllers.Customers.customers()

# New Customer
GET /customers/new				controllers.Customers.blankCustomer()
POST /customers					controllers.Customers.newCustomer()

# Delete Customer
POST	/customers/:id/delete	controllers.Customers.deleteCustomer(id:Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)